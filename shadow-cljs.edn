;; shadow-cljs configuration
{  
  :source-paths ["src"]

  :dependencies []

  :builds
  { :main
    { :target :node-script
      :output-to "target/main.js"
      :main app.main/init}

    :renderer
    { :target :browser
      :output-dir "resources/js"
      :asset-path "/js"
    
      :compiler-options {}

      :modules 
      {:app {:entries [app.renderer]}}      
      
      :devtools 
      { :before-load app.renderer/stop
        :after-load app.renderer/start}}}}
