;; shadow-cljs configuration
{ :source-paths ["src"]
  
  :dependencies []
  
  :builds
  { :main
    { :target :node-script
      :output-to "target/main.js"
      :main app.main/init

      :compiler-options {}}

    :renderer
    { :target :browser
      :output-dir "app/js"
      :asset-path "app"
    
      :compiler-options {}

      :modules 
      { :renderer {:entries [app.renderer]}}
    
      :devtools 
      { :before-load app.renderer/stop
        :after-load app.renderer/start}}}}
